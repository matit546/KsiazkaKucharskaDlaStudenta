@page
@model Ksiazka.Pages.Konta.ListaUzytkownikowModel
@using Ksiazka.Utility
@{
    ViewData["Title"] = "ListaUzytkownikow";
}



@if (User.IsInRole(Role.Administrator))
{
    <h1 class="text-center bg-info rounded">ListaUzytkownikow</h1>
    @if (Model.Uzytkownicy.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nazwa użytkownika</th>
                    <th scope="col">Email</th>
                    <th scope="col">Data założenia</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Uzytkownicy)
                {

                    <tr>
                        <td> <h3 style="color:black"><a asp-route-id="@item.Id" style="color:black" asp-page="WybranyPrzepis"> @Html.DisplayFor(m => item.UserName)</a></h3></td>
                        <td> <h3 style="color:black"> @Html.DisplayFor(m => item.Email)</h3></td>
                        <td> <h3 style="color:black"> @Html.DisplayFor(m => item.Data_zalozenia)</h3></td>



                    </tr>
                }


            </tbody>
        </table>
    }

    else
    {
        <p>
            Brak uzytkownikow
        </p>
    }

}
else
    {<p>Brak uprawnień</p> }