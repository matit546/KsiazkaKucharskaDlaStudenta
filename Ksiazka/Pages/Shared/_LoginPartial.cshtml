@using Microsoft.AspNetCore.Identity
@using Ksiazka.Utility
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            @if (User.IsInRole(Role.Administrator))
            {
                <a class="nav-link text-dark" asp-page="/Przepisy/MojePrzepisy" title="Manage">Wszystkie Przepisy</a>
            }
            else
            {
                <a class="nav-link text-dark" asp-page="/Przepisy/MojePrzepisy" title="Manage">Moje Przepisy</a>
            }

        </li>
        <img src="~/zdjecia/@Ksiazka.Model.statyczna.Zdjecie" width="50" height="50" alt="...">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
        </li>
    }
</ul>
