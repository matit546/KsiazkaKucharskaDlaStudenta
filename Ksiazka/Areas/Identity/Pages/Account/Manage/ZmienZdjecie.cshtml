@page
@model Ksiazka.Areas.Identity.Pages.Account.Manage.ZmienZdjecieModel
@{
}

<script>
    function ShowPreview(input) {
        if (input.files && input.files[0]) {
            var ImageDir = new FileReader();
            ImageDir.onload = function (e) {
                $('#impPrev').attr('src', e.target.result);
            }
            ImageDir.readAsDataURL(input.files[0]);
        }
    }</script>




<form method="post" enctype="multipart/form-data">
    <div class="col-sm-8">
        <input type="file" asp-for="Zdjecie" onchange="ShowPreview(this)" />

    </div>
    <div class="col-sm-8">
        <img id="impPrev" class="rounded-lg img-fluid" />
    </div>

    <div class="form-group">
        <input type="submit" value="Zmień" class="btn btn-success form-control" />

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}